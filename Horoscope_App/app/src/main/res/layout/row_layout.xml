<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp" android:id="@+id/cardView" tools:ignore="MissingConstraints"
            app:cardBackgroundColor="@color/cardview_shadow_end_color" app:cardCornerRadius="0dp"
            app:cardElevation="0dp" app:cardMaxElevation="0dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_gravity="bottom">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="name" android:id="@+id/textView_horo"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView_Date"
                    android:gravity="center"
                    android:text="date" android:textSize="12sp"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="87dp" android:alpha="0.70">

            <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp" app:srcCompat="@drawable/aries__1_"
                    android:id="@+id/imageView_Horo" android:scaleType="centerCrop"
                    android:layout_centerInParent="true" android:scrollbarAlwaysDrawHorizontalTrack="false"
                    android:scrollbarAlwaysDrawVerticalTrack="false" android:contentDescription="@string/img_aries"
                    android:background="@color/cardview_shadow_end_color"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
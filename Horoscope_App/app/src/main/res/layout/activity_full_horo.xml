<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/gradient" app:layout_gravity="center">

    <ScrollView
            android:layout_width="413dp"
            android:layout_height="539dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_date_2" android:id="@+id/SVHoro"
            tools:ignore="MissingConstraints">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LNr" tools:ignore="MissingConstraints" android:gravity="center"
                android:layout_marginTop="16dp"
        >
            <TextView
                    android:layout_width="348dp"
                    android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/TexToday"
                    android:background="@color/colorGray" android:textColor="@color/simpleWhite"
                    android:text="@string/Today" android:textSize="18sp" android:layout_gravity="center|top"/>
            <TextView
                    android:layout_width="348dp"
                    android:layout_height="wrap_content" android:id="@+id/TV" android:layout_gravity="center"
                    android:background="@color/colorGray" android:textColor="@color/simpleWhite" android:textSize="18sp"
                    app:drawableTint="#FFFFFF" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
            <FrameLayout
                    android:layout_width="348dp"
                    android:layout_height="97dp" android:layout_gravity="center"
                    android:background="@color/colorGray">

                <TextView
                        android:text="@string/Bus"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView5" android:layout_gravity="center|top"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
                <TextView
                        android:text="@string/Love"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView4" android:layout_gravity="right|top"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Love" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|right"
                        android:textColor="@color/simpleWhite" android:gravity="center"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Bus" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|center"
                        android:textColor="@color/simpleWhite" android:gravity="center"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/Numeral" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|left"
                        android:textColor="@color/simpleWhite" android:gravity="center"/>
                <TextView
                        android:text="@string/Numeral"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView3" android:layout_gravity="top|left"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
            </FrameLayout>
            <TextView
                    android:text="Завтра"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:layout_marginTop="15dp"
                    android:background="@color/colorGray" android:textColor="@color/simpleWhite"
                    android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="348dp"
                    android:layout_height="wrap_content" android:id="@+id/TVTommorow"
                    android:background="@color/colorGray"
                    android:layout_marginTop="2dp" android:textColor="@color/simpleWhite" android:textSize="18sp"/>
            <FrameLayout
                    android:layout_width="348dp"
                    android:layout_height="97dp" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:background="@color/colorGray"
                    android:layout_marginTop="2dp">

                <TextView
                        android:text="@string/Bus"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView2" android:layout_gravity="center|top"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
                <TextView
                        android:text="@string/Love"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView7" android:layout_gravity="right|top"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/love" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|right"
                        android:textColor="@color/simpleWhite" android:gravity="center"
                        android:scrollHorizontally="false"
                        android:scrollbars="vertical"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/bus" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|center"
                        android:textColor="@color/simpleWhite" android:gravity="center"/>
                <TextView
                        android:layout_width="97dp"
                        android:layout_height="75dp"
                        android:inputType="number"
                        android:ems="10"
                        android:id="@+id/numeral" android:textColorHint="@color/simpleWhite"
                        android:textSize="30sp" android:layout_gravity="bottom|left"
                        android:textColor="@color/simpleWhite" android:gravity="center"/>
                <TextView
                        android:text="@string/Numeral"
                        android:layout_width="97dp"
                        android:layout_height="31dp" android:id="@+id/textView8" android:layout_gravity="top|left"
                        android:textColor="@color/simpleWhite" android:textSize="18sp" android:gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
            android:layout_width="76dp"
            android:layout_height="78dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageHoro" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.507" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.105"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_horo"
            android:textColor="@color/cardview_dark_background" tools:ignore="MissingConstraints"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintVertical_bias="0.05"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_date_2"
            android:textColor="@color/cardview_dark_background"
            android:textSize="18sp" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.224"/>
</androidx.constraintlayout.widget.ConstraintLayout>